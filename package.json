{
  "name": "nestjs-boilerplate-microservice-api",
  "version": "3.0.2",
  "description": "NestJs boilerplate api",
  "author": "mike.rodrigues.lima@gmail.com",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "build": "nest build",
    "start": "yarn migration:run && node dist/src/main",
    "start:dev": "yarn migration:run && nest start --watch -b swc",
    "start:debug": "yarn migration:run && nest start --debug --watch",
    "prettier": "prettier --write \"src/**/*.json\"",
    "lint": "eslint \"{src,test}/**/*.{ts,js}\" --fix",
    "test": "jest --config=\"./jest.config.ts\" --detectOpenHandles",
    "test:cov": "jest --config=\"./jest-coverage.config.ts\" --coverage --detectOpenHandles && yarn make-badges",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "infra": "./docker/mongo/start-replicaset.sh",
    "scaffold": "./node_modules/@mikemajesty/microservice-crud/bin/microservice-crud",
    "typeorm": "ts-node -r tsconfig-paths/register \"./node_modules/typeorm/cli.js\"",
    "migration-postgres:create": "yarn typeorm migration:create \"./src/infra/database/postgres/migrations/rename\"",
    "migration-postgres:run": "yarn typeorm migration:run -d ./src/infra/database/postgres/config --transaction none",
    "migration-postgres:undo": "yarn typeorm migration:revert -d ./src/infra/database/postgres/config --transaction none",
    "migration-mongo:create": "ts-node -r tsconfig-paths/register ./src/infra/database/mongo/config.ts new -n rename",
    "migration-mongo:run": "ts-node -r tsconfig-paths/register ./src/infra/database/mongo/config.ts up",
    "migration-mongo:undo": "ts-node -r tsconfig-paths/register ./src/infra/database/mongo/config.ts down",
    "migration:run": "concurrently \"npm run migration-postgres:run\" \"npm run migration-mongo:run\"",
    "check-newest:deps": "npx npm-check-updates",
    "make-badges": "istanbul-badges-readme"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.4",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.4",
    "@nestjs/event-emitter": "^2.0.4",
    "@nestjs/mongoose": "^10.0.10",
    "@nestjs/platform-express": "^10.4.4",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/typeorm": "^10.0.2",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.53.0",
    "@opentelemetry/exporter-trace-otlp-proto": "^0.53.0",
    "@opentelemetry/instrumentation-http": "^0.53.0",
    "@opentelemetry/instrumentation-mongodb": "^0.47.0",
    "@opentelemetry/instrumentation-pg": "^0.44.0",
    "@opentelemetry/instrumentation-redis-4": "^0.42.0",
    "@opentelemetry/resources": "^1.26.0",
    "@opentelemetry/sdk-node": "^0.53.0",
    "@opentelemetry/sdk-trace-web": "^1.26.0",
    "axios": "^1.7.7",
    "axios-better-stacktrace": "^2.1.7",
    "axios-retry": "^4.5.0",
    "body-parser": "^1.20.3",
    "class-validator": "^0.14.1",
    "colorette": "^2.0.20",
    "compression": "^1.7.4",
    "convert-pino-request-to-curl": "^1.0.0",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "mongo-migrate-ts": "^1.6.2",
    "mongoose": "^8.7.0",
    "mongoose-paginate-v2": "^1.8.4",
    "nestjs-convert-to-curl": "^1.0.0",
    "nestjs-i18n": "^10.4.9",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.15",
    "pg": "^8.13.0",
    "pg-hstore": "^2.3.4",
    "pino": "^9.4.0",
    "pino-http": "^10.3.0",
    "pino-mongodb": "^4.3.0",
    "pino-pretty": "^11.2.2",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.2.5",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "5.5.4",
    "uuid": "^10.0.0",
    "write-excel-file": "^2.0.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@mikemajesty/microservice-crud": "6.0.13",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.4",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.26",
    "@swc/jest": "^0.2.36",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.7.4",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.14.0",
    "husky": "^9.1.6",
    "istanbul-badges-readme": "^1.9.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "npm-check-updates": "^17.1.3",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0"
  }
}